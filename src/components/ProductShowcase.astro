---
// Import content from migration
const content = await import('../../migration_static/content/extracted_content.json');
const products = content.default.products;
---

<section id="products" class="section-padding bg-white" aria-labelledby="products-heading">
  <div class="container-center">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 id="products-heading" class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
        Cognitive Augmentation in Action
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        See how we translate complexity into clarity across different domains. 
        Each app demonstrates the same philosophy applied to restore human agency.
      </p>
    </div>
    
    <!-- ChoiceCheck Section -->
    <div class="mb-20">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Content -->
        <div class="lg:order-1">
          <div class="flex items-center mb-4">
            <h3 class="text-2xl md:text-3xl font-bold text-gray-900">
              {products.choicecheck.name}
            </h3>
            <span class="status-badge available ml-4">Available on iOS</span>
          </div>
          
          <p class="text-xl text-gray-600 mb-6">
            {products.choicecheck.subtitle}
          </p>
          
          <!-- How It Works -->
          <div class="space-y-4 mb-8">
            {products.choicecheck.howItWorks.map((step) => (
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0 w-8 h-8 bg-primary-100 text-primary-600 rounded-full flex items-center justify-center font-semibold text-sm">
                  {step.step}
                </div>
                <div>
                  <div class="font-semibold text-gray-900">{step.title}</div>
                  <div class="text-gray-600">{step.description}</div>
                </div>
              </div>
            ))}
          </div>
          
          <!-- App Store Link -->
          <div class="flex items-center space-x-4">
            <a 
              href="https://apps.apple.com/app/id6742806334" 
              class="app-store-badge"
              aria-label="Download ChoiceCheck on the App Store"
            >
              <img 
                src="/assets/app_store_badge.svg" 
                alt="Download on the App Store" 
                class="w-40 h-auto"
                width="160"
                height="47"
                loading="lazy"
              />
            </a>
          </div>
        </div>
        
        <!-- Screenshots -->
        <div class="lg:order-2">
          <div class="device-mockup">
            <div class="relative">
              <img 
                src="/assets/assets/screenshots/choicecheck/analysis.PNG" 
                alt="ChoiceCheck AI analysis showing detailed health score and reasoning"
                class="w-full h-auto rounded-2xl shadow-strong"
                width="300"
                height="600"
                loading="lazy"
              />
              
              <!-- Interactive Elements Overlay -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/10 to-transparent rounded-2xl pointer-events-none"></div>
            </div>
            
            <!-- Screenshot Carousel -->
            <div class="carousel-nav mt-6">
              <button 
                class="carousel-dot active" 
                aria-label="View analysis screenshot"
                data-screenshot="analysis"
              ></button>
              <button 
                class="carousel-dot" 
                aria-label="View sources screenshot"
                data-screenshot="analysis_2"
              ></button>
              <button 
                class="carousel-dot" 
                aria-label="View nutrition screenshot"
                data-screenshot="analysis_3"
              ></button>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- MoneyTide Section -->
    <div class="mb-20">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Screenshots -->
        <div class="lg:order-1">
          <div class="device-mockup">
            <div class="relative">
              <img 
                src="/assets/assets/screenshots/moneytide/actual/Dashboard_PersonalSpending_resized.png" 
                alt="MoneyTide dashboard showing spending overview and financial insights"
                class="w-full h-auto rounded-2xl shadow-strong"
                width="300"
                height="600"
                loading="lazy"
              />
            </div>
            
            <!-- Screenshot Carousel -->
            <div class="carousel-nav mt-6">
              <button 
                class="carousel-dot active" 
                aria-label="View dashboard screenshot"
                data-screenshot="dashboard"
              ></button>
              <button 
                class="carousel-dot" 
                aria-label="View personal expenses screenshot"
                data-screenshot="personal"
              ></button>
              <button 
                class="carousel-dot" 
                aria-label="View shared expenses screenshot"
                data-screenshot="shared"
              ></button>
            </div>
          </div>
        </div>
        
        <!-- Content -->
        <div class="lg:order-2">
          <div class="flex items-center mb-4">
            <h3 class="text-2xl md:text-3xl font-bold text-gray-900">
              {products.moneytide.name}
            </h3>
            <span class="status-badge available ml-4">Available on iOS</span>
          </div>
          
          <p class="text-xl text-gray-600 mb-6">
            {products.moneytide.description}
          </p>
          
          <!-- Key Features -->
          <div class="space-y-4 mb-8">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-finance-primary/10 text-finance-primary rounded-full flex items-center justify-center">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
              </div>
              <div>
                <div class="font-semibold text-gray-900">Visual Financial Clarity</div>
                <div class="text-gray-600">Understand your money flow with elegant dashboards and insights</div>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-finance-primary/10 text-finance-primary rounded-full flex items-center justify-center">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              </div>
              <div>
                <div class="font-semibold text-gray-900">Fair Expense Splitting</div>
                <div class="text-gray-600">Split costs with friends and family without the awkwardness</div>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-finance-primary/10 text-finance-primary rounded-full flex items-center justify-center">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
              </div>
              <div>
                <div class="font-semibold text-gray-900">Privacy by Design</div>
                <div class="text-gray-600">Your financial data stays secure and private, always</div>
              </div>
            </div>
          </div>
          
          <!-- App Store Link -->
          <div class="flex items-center space-x-4">
            <a 
              href="https://apps.apple.com/app/moneytide/" 
              class="app-store-badge"
              aria-label="Download MoneyTide on the App Store"
            >
              <img 
                src="/assets/app_store_badge.svg" 
                alt="Download on the App Store" 
                class="w-40 h-auto"
                width="160"
                height="47"
                loading="lazy"
              />
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Expansion Vision -->
    <div class="text-center bg-gradient-to-r from-primary-50 to-primary-100 rounded-2xl p-8 md:p-12">
      <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">
        Today Food and Money, Tomorrow Everything
      </h3>
      <p class="text-lg text-gray-600 mb-8 max-w-3xl mx-auto">
        The same philosophy scales to every domain where complexity has overwhelmed choice. 
        We're building the cognitive infrastructure for the next century.
      </p>
      
      <div class="grid sm:grid-cols-2 md:grid-cols-4 gap-6 mb-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-white rounded-lg shadow-medium flex items-center justify-center mx-auto mb-3">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
          </div>
          <div class="font-semibold text-gray-900">Health Choices</div>
          <span class="status-badge coming-soon">Coming Soon</span>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-white rounded-lg shadow-medium flex items-center justify-center mx-auto mb-3">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4" />
            </svg>
          </div>
          <div class="font-semibold text-gray-900">Tech Privacy</div>
          <span class="status-badge coming-soon">Coming Soon</span>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-white rounded-lg shadow-medium flex items-center justify-center mx-auto mb-3">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="font-semibold text-gray-900">Sustainability</div>
          <span class="status-badge coming-soon">Coming Soon</span>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-white rounded-lg shadow-medium flex items-center justify-center mx-auto mb-3">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <div class="font-semibold text-gray-900">Investment Decisions</div>
          <span class="status-badge coming-soon">Coming Soon</span>
        </div>
      </div>
      
      <p class="text-gray-600 text-sm max-w-2xl mx-auto">
        Every domain follows the same pattern: complexity overwhelms choice, people surrender agency, 
        VastSilicon translates complexity back into clarity.
      </p>
    </div>
  </div>
</section>

<script>
  // Screenshot carousel functionality
  document.addEventListener('DOMContentLoaded', () => {
    const screenshots = {
      choicecheck: {
        analysis: '/assets/assets/screenshots/choicecheck/analysis.PNG',
        analysis_2: '/assets/assets/screenshots/choicecheck/analysis_2.PNG',
        analysis_3: '/assets/assets/screenshots/choicecheck/analysis_3.jpg'
      },
      moneytide: {
        dashboard: '/assets/assets/screenshots/moneytide/actual/Dashboard_PersonalSpending_resized.png',
        personal: '/assets/assets/screenshots/moneytide/actual/MyExpenses_month_resized.png',
        shared: '/assets/assets/screenshots/moneytide/actual/SharedExpenses_resized.png'
      }
    };
    
    const carouselDots = document.querySelectorAll('.carousel-dot');
    
    carouselDots.forEach(dot => {
      dot.addEventListener('click', () => {
        const screenshot = dot.getAttribute('data-screenshot');
        const container = dot.closest('.device-mockup');
        const img = container.querySelector('img');
        
        if (screenshot && img) {
          // Determine which app this is for
          const isChoiceCheck = screenshot.includes('analysis');
          const screenshotSrc = isChoiceCheck 
            ? screenshots.choicecheck[screenshot]
            : screenshots.moneytide[screenshot];
          
          if (screenshotSrc) {
            img.src = screenshotSrc;
            
            // Update active state
            container.querySelectorAll('.carousel-dot').forEach(d => d.classList.remove('active'));
            dot.classList.add('active');
          }
        }
      });
    });
  });
</script>