---
// Import content from migration
const content = await import('../../migration_static/content/extracted_content.json');
const { navigation, legal } = content.default;
---

<footer class="bg-gray-900 text-white" aria-labelledby="footer-heading">
  <h2 id="footer-heading" class="screen-reader-only">Footer</h2>
  
  <div class="container-center py-12">
    <div class="grid md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="md:col-span-1">
        <div class="flex items-center space-x-3 mb-4">
          <img 
            src="/assets/vast_silicon_logo.png" 
            alt="VastSilicon Logo" 
            class="h-8 w-auto"
            width="32"
            height="32"
            loading="lazy"
          />
          <span class="font-semibold text-lg">VastSilicon</span>
        </div>
        <p class="text-gray-400 text-sm mb-4">
          Building cognitive infrastructure for human flourishing. 
          Stop guessing. Start knowing.
        </p>
        <p class="text-gray-500 text-xs">
          {legal.copyright}
        </p>
      </div>
      
      <!-- Products -->
      <div>
        <h3 class="font-semibold text-white mb-4">Products</h3>
        <ul class="space-y-2 text-sm">
          <li>
            <a 
              href="/choicecheck" 
              class="text-gray-400 hover:text-white transition-colors duration-200 focus-ring rounded"
            >
              ChoiceCheck
            </a>
          </li>
          <li>
            <a 
              href="/moneytide" 
              class="text-gray-400 hover:text-white transition-colors duration-200 focus-ring rounded"
            >
              MoneyTide
            </a>
          </li>
          <li>
            <span class="text-gray-500">Future Apps</span>
          </li>
        </ul>
      </div>
      
      <!-- Company -->
      <div>
        <h3 class="font-semibold text-white mb-4">Company</h3>
        <ul class="space-y-2 text-sm">
          <li>
            <a 
              href="/about" 
              class="text-gray-400 hover:text-white transition-colors duration-200 focus-ring rounded"
            >
              About
            </a>
          </li>
          <li>
            <a 
              href="/philosophy" 
              class="text-gray-400 hover:text-white transition-colors duration-200 focus-ring rounded"
            >
              Philosophy
            </a>
          </li>
          <li>
            <a 
              href="/contact" 
              class="text-gray-400 hover:text-white transition-colors duration-200 focus-ring rounded"
            >
              Contact
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Legal & Support -->
      <div>
        <h3 class="font-semibold text-white mb-4">Legal & Support</h3>
        <ul class="space-y-2 text-sm">
          <li>
            <a 
              href="/privacy" 
              class="text-gray-400 hover:text-white transition-colors duration-200 focus-ring rounded"
            >
              Privacy Policy
            </a>
          </li>
          <li>
            <a 
              href="/terms" 
              class="text-gray-400 hover:text-white transition-colors duration-200 focus-ring rounded"
            >
              Terms of Service
            </a>
          </li>
          <li>
            <a 
              href="/support" 
              class="text-gray-400 hover:text-white transition-colors duration-200 focus-ring rounded"
            >
              Support
            </a>
          </li>
          <li>
            <a 
              href="mailto:hi@vastsilicon.com" 
              class="text-gray-400 hover:text-white transition-colors duration-200 focus-ring rounded"
            >
              Contact Us
            </a>
          </li>
        </ul>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="mt-8 pt-8 border-t border-gray-800">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="flex items-center space-x-6 mb-4 md:mb-0">
          <p class="text-gray-400 text-sm">
            Contact: {legal.contact}
          </p>
          <a 
            href="mailto:{legal.email}" 
            class="text-gray-400 hover:text-white text-sm transition-colors duration-200 focus-ring rounded"
          >
            {legal.email}
          </a>
        </div>
        
        <div class="flex items-center space-x-4">
          <!-- App Store Links -->
          <a 
            href="https://apps.apple.com/app/id6742806334" 
            class="text-gray-400 hover:text-white transition-colors duration-200 focus-ring rounded"
            aria-label="Download ChoiceCheck on the App Store"
          >
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
            </svg>
          </a>
          
          <!-- Performance Badge -->
          <div class="text-xs text-gray-500 flex items-center space-x-1">
            <svg class="w-3 h-3 text-green-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>100/100 Lighthouse</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>